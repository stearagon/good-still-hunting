<div class="still-add">
  <h2 class="still-add__title">
    Add Still{{if batch 's'}}
  </h2>

  <div class="still-add-form__input">
    {{#power-select
      options=sortedMovies
      searchField="title"
      allowClear=true
      selected=movie
      renderInPlace=true
      onchange=(action 'filmChange')
      placeholder="add movie..."
      searchPlaceholder="type movie name..." as |movie|}}

      {{movie.title}}
    {{/power-select}}

    <div class="still-add-form__error">
      {{if isValidated errors.movie}}
    </div>
  </div>

  <button {{action 'toggleBatch'}}>
    Switch to {{if batch 'Single' 'Batch'}} Upload
  </button>

  {{#if batch}}
    {{still-batch-form
      create=(action 'createMultiple')
      cancel=(action 'cancel')
      movie=movie
      startTags=tags
      submissionError=submissionError
      store=store}}
  {{else}}
    {{still-form
      create=(action 'create')
      cancel=(action 'cancel')
      model=still
      movie=movie
      startTags=tags
      submissionError=submissionError
      store=store}}
  {{/if}}

    {{#if loading}}
        <div class="spinner-modal">
            <div class="
                load
                {{if initialLoad 'load--black' 'load--white'}}">
                <div>G</div>
                <div>N</div>
                <div>I</div>
                <div>D</div>
                <div>A</div>
                <div>O</div>
                <div>L</div>
            </div>
        </div>
    {{/if}}
</div>
