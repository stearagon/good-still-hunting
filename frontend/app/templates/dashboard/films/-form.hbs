<form class="film-add__form">
  <div class="film-add-form__errors">
    {{errorMessage}}
  </div>

  <div class="film-add-form__input">
    {{input
      type="text"
      placeholder="title..."
      allowClear=true
      onchange=(action (mut title))
      value=title}}
  </div>

  <div class="film-add-form__input">
    {{input
      type="text"
      onchange=(action (mut director))
      placeholder="director..."
      value=director}}
  </div>

  <div class="film-add-form__input">
    {{input
      type="number"
      onchange=(action (mut year))
      placeholder="year"
      value=year}}
  </div>

  <div class="film-add-form__input">
    {{#power-select
      options=genres
      onchange=(action (mut genre))
      selected=genre
      placeholder="Please Select Genre"
      searchEnabled=false as |genre|}}
      {{genre}}
    {{/power-select}}
  </div>

  <div class="film-add-form__actions">
    <button class="film-add-form-actions__create" {{action 'create'}}>Submit</button>
    <button class="film-add-form-actions__cancel" {{action 'cancel'}}>Cancel</button>
  </div>
</form>
