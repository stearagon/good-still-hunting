<header>
  {{#if session.isAuthenticated}}
    {{#link-to 'dashboard.index'}}<h1 id="title">Good Still Hunting</h1>{{/link-to}}
    {{#link-to 'dashboard.films'}}Films{{/link-to}}
    {{#link-to 'dashboard.stills'}}Stills{{/link-to}}
    {{#link-to 'dashboard.films.new'}}Add Film{{/link-to}}
    {{#link-to 'dashboard.stills.new'}}Add Still{{/link-to}}

    {{search-form search=(action "searchStills")}}

    <a href="#" {{action 'logout'}}>Logout</a>
  {{else}}
    {{#link-to 'login'}}Log In{{/link-to}}
  {{/if}}
</header>

{{outlet}}

<script type="text/javascript">
  $(document).ready(function(){
    $('body').height($(document).height() + 1);
    $(window).scroll(function() {
      if($(window).height() + $(window).scrollTop() === $(document).height()) {
        if($('.load-button')){
          $('.load-button').click();
        }
      }
    });
  });
</script>

<footer>
  <p>
    Good Still Hunting &#169;2015
  </p>
</footer>
