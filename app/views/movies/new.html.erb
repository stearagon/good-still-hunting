<%= form_for(@movie, multipart: true) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title%>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :director %>
    <%= f.text_field :director %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.select(:genre, Movie::GENRES, {:include_blank => 'Please Select Genre'})  %>
  </div>


  <div class="actions">
    <%= f.submit 'Add Movie' %>
    <%= link_to 'Cancel', root_url, class: 'button' %>
  </div>
<% end %>

<%= link_to "Return to homepage", root_url %>
